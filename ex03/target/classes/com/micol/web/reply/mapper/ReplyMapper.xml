<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.micol.web.reply.mapper.ReplyMapper">
	
	<select id="getRepAll" resultType="ReplyVO" parameterType="ReplyVO">
		SELECT * FROM TBL_REPLY WHERE BNO = #{bno}
	</select>
	
	<insert id="insertRep" parameterType="ReplyVO">
		INSERT INTO TBL_REPLY(
    							RNO, 
    							BNO, 
    							REPLY, 
    							REPLYER, 
    							REPLYDATE
    	)
		VALUES (
				SEQ_REPLY.NEXTVAL,
				#{bno}, 
				#{reply}, 
				#{replyer}, 
				SYSDATE
		);
	</insert>
</mapper> 